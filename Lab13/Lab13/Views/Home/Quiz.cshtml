@{
    ViewData["Title"] = "Quiz";
}

<style>
    #answer-input{
        border-radius:4px;
        border: 1px solid lightgray;
        height: 30px;
    }
    p{
        color:black;
        margin-bottom:0;
    }

    .container-button {
        margin-top:15px;
    }
    .next-button{
        border-radius:4px;
        border: 1px solid lightgray;
        font-size:18px;
        font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        background-color:white;
    }

    .finish-button{
        border-radius:4px;
        border: 1px solid lightgray;
        font-size:18px;
        font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        background-color: #337ab7;
        color:white;
    }
</style>

<div>
    <h1>Quiz</h1>
    <form method="post">
		<div><p><b>@ViewBag.Question</b></p></div>
		<div><input name="answer" size="30" id="answer-input"/></div>
        <div class="container-button">
            <input name="next" type="submit" formaction="~/Home/Next" value="Next" class="next-button"/>
            <input name="finish" type="submit" formaction="~/Home/Finish" value="Finish" class="finish-button"/>
        </div>
    </form>
</div>